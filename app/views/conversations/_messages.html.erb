<%messages&.each do |message|%>
	<% if message.sender.id == current_user.id %>
	<div class="outgoing_msg">
	  <div class="sent_msg">
	    <p><%= message.content%></p>
	    <span class="time_date"><%= message.created_at.localtime.strftime('%I:%M %p | %b %e')%> </span></div>
	</div>
	<%else%>
	  <div class="incoming_msg">
	      <div class="incoming_msg_img"><%= image_tag message.sender.avatar.url, class: 'rounded-circle'%></div>
	        <div class="received_msg">
	          <div class="received_withd_msg">
	            <p><%= message.content%></p>
	            <span class="time_date"><%= message.created_at.localtime.strftime('%I:%M %p | %b %e')%> </span></div>
	      </div>
	  </div>              
	<%end%>

<%end%>